@{
    ViewData["Title"] = "Success";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background: linear-gradient(135deg, #e0f7ea, #c7f0d9);">
    <div class="card shadow-lg p-4 rounded-4 text-center" style="width: 500px; background-color: rgba(255, 255, 255, 0.95); animation: fadeIn 1s;">
        <div class="mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="#28a745" class="bi bi-check-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 1 8 0a8 8 0 0 1 0 16z"/>
                <path d="M10.97 5.97a.235.235 0 0 1 .02.022l-3.992 4.99L5.324 8.31a.25.25 0 0 1 .365-.35l1.828 1.829 3.452-4.096a.25.25 0 0 1 .001-.003z"/>
            </svg>
        </div>

        <h3 class="fw-bold mb-2" style="color: #28a745;">Success!</h3>
        <p class="text-muted fs-5">@ViewBag.Message</p>

        <a href="/" class="btn btn-gradient mt-3" style="background: linear-gradient(to right, #28a745, #218838); color: white; width: 150px;">Go Home</a>
    </div>
</div>


