<h2>Safe Echo output</h2>
<p>Viewbag input: @ViewBag.Input</p>
<form method="post" asp-action="SafeEcho">
    <div class="form-group">
        <label for="input">Enter some text:</label>
        <input type="text" name="input" id="input" class="form-control" value="@ViewBag.Input" />
        @Html.ValidationMessage("input", "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>

@if (!string.IsNullOrWhiteSpace(ViewBag.Input))
{
    <div class="alert alert-success mt-3">
        <strong>You entered safely:</strong> @ViewBag.Input
    </div>
}

