@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 fw-bold text-primary">Role-Based Product Management System</h1>
        <p class="lead mt-3">
            A secure ASP.NET Core MVC application with <strong>Admin</strong> and <strong>Manager</strong> roles.  
            Manage products with role-based access control, authentication, and data protection.
        </p>
    </div>

    <div class="row mt-5">
        <!-- Feature 1 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">🔐 Secure Authentication</h5>
                    <p class="card-text">Register and Login with strong password policies and ASP.NET Identity.</p>
                </div>
            </div>
        </div>

        <!-- Feature 2 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-warning">⚖️ Role-Based Authorization</h5>
                    <p class="card-text">Admins can <b>Create, Edit, Delete</b>. Managers can <b>Edit & View</b> only.</p>
                </div>
            </div>
        </div>

        <!-- Feature 3 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">📦 Product Management</h5>
                    <p class="card-text">Easily manage products with CRUD operations and secure price encryption.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-lg btn-outline-primary me-3">Register</a>
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-lg btn-primary">Login</a>
    </div>
</div>
