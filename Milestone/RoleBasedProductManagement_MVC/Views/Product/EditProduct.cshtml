@* Here we have a form for editing an existing product *@
@* It will allow the user to update the product details *@
@model RoleBasedProductManagement_MVC.Models.Product

<div class="container mt-4">
    <h2 class="mb-3">Edit Product</h2>

    <form asp-action="Edit" method="post" class="shadow p-4 bg-light rounded">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
